<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- namespace : 구분용도-->
<mapper namespace="com.daou.Member">
    <!--  회원 로그인 -->
    <select id="selectMemberByIDAndPW"
            parameterType="LoginRequestDTO"
            resultType="MemberVO">
        <![CDATA[
        SELECT member_id, username, nickname, email
        FROM members
        WHERE email = #{member_id}
          AND password = #{password}
        ]]>
    </select>

</mapper>